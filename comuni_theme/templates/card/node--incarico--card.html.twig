<div class="card py-3 px-4 h-100 rounded shadow-sm border border-light">{{ title_suffix }}

  <div class="container px-0">
    <div class="row mx-0 gap-3">
      <div class="col px-0">

        {% include directory ~ '/templates/card/parts/card--parts--category.html.twig' with { 'icon': 'it-card', 'taxonomy': content.field_tipo_di_incarico } %}
        {% include directory ~ '/templates/card/parts/card--parts--title.html.twig' with { 'label': label } %}

        <div class="mt-2">

          {% if content.field_data_inizio_incarico[0] is not empty %}
            <div class="title-xsmall-semi-bold text-uppercase">
              Incaricato dal:
            </div>
            <div class="ps-2">
              {% include directory ~ '/templates/card/parts/card--parts--date.html.twig' with { 'content': content.field_data_inizio_incarico[0]["#text"]|date('U')|format_date('medium') } %}
            </div>
          {% endif %}

          {% if content.field_unita_organizzativa[0] is not empty %}
            <div class="mb-1">
              <div class="title-xsmall-semi-bold text-uppercase">
                Presso:
              </div>
              {% for item in content.field_unita_organizzativa["#items"] %}
                <div class="d-flex gap-1 ps-2">
                  <svg class="icon icon-xs flex-shrink-0 mt-1"><use href="#it-pa" xlink:href="#it-pa"></use></svg>
                  <a class="text-paragraph-card u-grey-light text-decoration-none" href="{{ path('entity.node.canonical', {'node': item.entity.id}) }}" title="Vai al contenuto {{ item.entity.label }}">{{ item.entity.label }}</a>
                </div>
              {% endfor %}
            </div>
          {% endif %}

        </div>

      </div>
    </div>
  </div>

  {% include directory ~ '/templates/card/parts/card--parts--read-more.html.twig' with { 'url': url } %}

</div>