<div class="container" id="main-container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="cmp-breadcrumbs" role="navigation">
        <nav class="breadcrumb-container" aria-label="breadcrumb">
          <ol data-element="breadcrumb" class="breadcrumb p-0">
            <li class="breadcrumb-item">
              <a href="{{ url('<front>') }}">Home</a>
              <span class="separator">/</span>
            </li>
            <li class="breadcrumb-item">
              <a href="{{ url('<front>') }}vivere-il-comune">Vivere il Comune</a>
              <span class="separator">/</span>
            </li>
            <li class="breadcrumb-item">
              <a href="{{ url('<front>') }}luoghi">Luoghi</a>
              <span class="separator">/</span>
            </li>
            {% if content.field_tipo_di_luogo[0] is not empty %}
            <li class="breadcrumb-item">
              {% for item in content.field_tipo_di_luogo["#items"] %}
                <a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': item.target_id}) }}">
                  {{ item|view["#plain_text"]|capitalize }}
                </a>
                {% if not loop.last %} - {% endif %}
              {% endfor %}
              <span class="separator">/</span>
            </li>
            {% endif %}
            <li class="breadcrumb-item active" aria-current="page">
              {{label}}
            </li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</div>