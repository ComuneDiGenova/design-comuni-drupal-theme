{% if content is not empty %}
  <section class="it-page-section mb-5">
    {% if label is not empty %}
      <h2 class="title-xxlarge mb-3" id="{{id}}">{{label}}</h2>
    {% endif %}
    <div class="container" {% if data_element %}data-element="{{ data_element }}"{% endif %}>
      {{ drupal_view('paragraph_collegati', 'card_' ~ cols, content) }}
    </div>
  </section>
{% endif %}