{% if items %}
  <nav class="pager" role="navigation" aria-labelledby="{{ heading_id }}">
    <h4 id="{{ heading_id }}" class="visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="flex-lg-nowrap w-100 pagination pager__items js-pager__items">
      {# Print previous item if we are not on the first page. #}
      {% if items.previous %}
        <li class="page-item pager__item pager__item--previous">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel').addClass('page-link') }}>
            <span class="visually-hidden">{{ 'Previous page'|t }}</span>
            <span aria-hidden="true"><svg class="icon"><use href="#it-chevron-left"></use></svg></span>
          </a>
        </li>
      {% endif %}
	  {# Print first item if we are not on the first page. #}
      {% if items.first is not empty %}
        <li class="page-item pager__item pager__item--first">
          <a class="page-link" href="{{ items.first.href }}" title="{{ 'Go to first page'|t }}"{{ items.first.attributes|without('href', 'title').addClass('page-link') }}>
            <span class="visually-hidden">{{ 'First page'|t }}</span>
            <span aria-hidden="true">1</span>
          </a>
        </li>
      {% endif %}
      {# Add an ellipsis if there are further previous pages. #}
      {% if ellipses.previous %}
        <li class="page-item pager__item pager__item--ellipsis" role="presentation"><span class="page-link">&hellip;</span></li>
      {% endif %}
      {# Now generate the actual pager piece. #}
      {% for key, item in items.pages %}
	  	{% if key == 1 and items.first is not empty %}
	  	{% elseif key == (1+items.last.href|split('=')[1]|number_format) and items.last is not empty %}
		{% else %}
			<li class="page-item pager__item{{ current == key ? ' is-active' : '' }}">
			{% if current == key %}
				{% set title = 'Current page'|t %}
			{% else %}
				{% set title = 'Go to page @key'|t({'@key': key}) %}
			{% endif %}
			<a href="{{ item.href }}" title="{{ title }}"{{ item.attributes|without('href', 'title').addClass('page-link') }}{{ current == key ? ' aria-current="page"' : '' }}>
				<span class="visually-hidden">
				{{ current == key ? 'Current page'|t : 'Page'|t }}
				</span>
				{{- key -}}
			</a>
			</li>
		{% endif %}
      {% endfor %}
      {# Add an ellipsis if there are further next pages. #}
      {% if ellipses.next %}
        <li class="page-item pager__item pager__item--ellipsis" role="presentation"><span class="page-link">&hellip;</span></li>
      {% endif %}
      {# Print last item if we are not on the last page. #}
	  
      {% if items.last is not empty %}
        <li class="page-item pager__item pager__item--last">
          <a href="{{ items.last.href }}" title="{{ 'Go to last page'|t }}"{{ items.last.attributes|without('href', 'title').addClass('page-link') }}>
            <span class="visually-hidden">{{ 'Last page'|t }}</span>
            <span aria-hidden="true">{{ (1+items.last.href|split('=')[1]|number_format) }}</span>
          </a>
        </li>
      {% endif %}
      {# Print next item if we are not on the last page. #}
      {% if items.next %}
        <li class="page-item pager__item pager__item--next">
          <a class="page-link" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel').addClass('page-link') }}>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
            <span aria-hidden="true"><svg class="icon icon-primary"><use href="#it-chevron-right"></svg></span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
