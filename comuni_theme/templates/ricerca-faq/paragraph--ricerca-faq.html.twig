{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished',
  'py-5',
  'has-bg-grey'
] %}




<section{{attributes.addClass(classes).addClass(wrapper_classes)}}>
  <div class="container">
    {% if paragraph.field_titolo[0] is not empty %}
      <h2 class="mb-4 title-xxlarge">{{ paragraph.field_titolo.value }}</h2>
    {% endif %} 
    <div class="row">
      {{ drupal_view("ricerca_faq", 'ricerca', paragraph.id[0].value) }}
    </div>
  </div>
</section>
