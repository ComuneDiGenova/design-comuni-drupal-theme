
<div class="accordion-item border-bottom">
  <h2 class="accordion-header" id="heading-{{paragraph.id.value}}">
    <button class="accordion-button d-flex justify-content-between p-3 px-4 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{paragraph.id.value}}" aria-expanded="false" aria-controls="collapse-{{paragraph.id.value}}">
      {{paragraph.field_titolo|view}}
      <div class="icon-wrapper">
        <svg class="icon me-1 icon-primary"><use href="#it-collapse" xlink:href="#it-collapse"></use></svg>
      </div>
    </button>
  </h2>
  <div id="collapse-{{paragraph.id.value}}" data-bs-parent=".accordion-vista" class="accordion-collapse collapse p-0 pt-1" role="region" aria-labelledby="heading-{{paragraph.id.value}}">
    <div class="accordion-body pt-3 pb-1 px-4">
      {{paragraph.field_descrizione_lunga|view}}
    </div>
  </div>
</div>