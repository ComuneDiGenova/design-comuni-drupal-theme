<div class="card card-teaser no-after rounded shadow-sm mb-0 border border-light h-100">{{ title_suffix }}

  <div class="container p-0 pb-5">
    <div class="row m-0 gap-3 mb-1">

      <div class="col p-0">
        <div class="card-body">
          <div class="category-top d-flex gap-2">
            <svg class="icon">
              <use href="#it-calendar" xlink:href="#it-calendar"></use>
            </svg>
            <div class="title-xsmall-semi-bold fw-semibold mt-1">{% for item in content.field_tipo_di_evento["#items"] %}{{ item.entity.name.value }}{% if not loop.last %}, {% endif %}{% endfor %}</div>
          </div>
          <h3 class="card-title text-paragraph-medium u-grey-light mb-0">{{ label }}</h3>
          <div class="text-paragraph-medium u-grey-light fs-6 fw-bold">
            <span>{{ content.field_data_e_orario_di_inizio['#items'].0.value|date('d') }}</span>
            <span>{{ content.field_data_e_orario_di_inizio['#items'].0.value|date('F')|t({}, {'context' : 'Long month name'}) }}</span>
            <span>{{ content.field_data_e_orario_di_inizio['#items'].0.value|date('Y') }}</span>
          </div>
        </div>
      </div>









      
      {% if content.field_immagine[0] is not empty %}
        <div class="col-4 p-0">
          <div class="rounded border border-light shadow-sm">
            {{ drupal_image(content.field_immagine[0]["#item"].target_id, '4_3', {loading: 'lazy', class: 'w-100 h-auto', alt: content.field_immagine[0]["#item"].alt|t, title: content.field_immagine[0]["#item"].alt|t}) }}
          </div>
        </div>
      {% endif %}

    </div>

    <div class="row mb-3 mx-0">
      <div class="col p-0">
        <p class="text-paragraph-card u-grey-light m-0">{{ content.field_descrizione_breve[0] }}</p>
        

        
      </div>
    </div>


  </div>

  <a class="read-more" href="{{ url }}">
    <span class="text">Vai alla pagina</span>
    <svg class="icon ms-0">
      <use xlink:href="#it-arrow-right"></use>
    </svg>
  </a>
  
</div>