{% set isFront = (path('<current>') == '/homepage') %}
{% if not isFront %}
	<div class="container" id="main-container">
			<div class="row justify-content-center">
					<div class="col-12 col-lg-10">
							<div class="cmp-breadcrumbs" role="navigation">
									<nav class="breadcrumb-container" aria-label="breadcrumb">
											<ol data-element="breadcrumb" class="breadcrumb p-0">
													<li class="breadcrumb-item">
															<a href="{{ url('<front>') }}">Home</a>
															<span class="separator">/</span>
													</li>

													<li class="breadcrumb-item active" aria-current="page">
															{{label}}
													</li>
											</ol>
									</nav>
							</div>
					</div>
			</div>
	</div>
{% endif %}

{%
set classes = [
'node',
'node--type-' ~ node.bundle|clean_class,
node.isPromoted() ? 'node--promoted',
node.isSticky() ? 'node--sticky',
not node.isPublished() ? 'node--unpublished',
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
]
%}
<article{{ attributes.addClass(classes) }}>
    <div class="container page-name">
        <div class="row justify-content-center row-shadow">
            <div class="col-12 col-lg-10">
                <div class="cmp-hero">
                    <section class="it-hero-wrapper bg-white align-items-start">
                        <div class="it-hero-text-wrapper pt-0 ps-0 pb-4 pb-lg-60">
                            {% if not is_front %}
                            <h1 class="text-black hero-title" data-element="page-name">{{ node.label }}</h1>
                            {% endif %}
                            {% if content.field_descrizione_breve %}
                            <div class="hero-text">{{ content.field_descrizione_breve }}</div>
                            {% endif %}
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    {{ content|without('field_descrizione_breve') }}
    </article>