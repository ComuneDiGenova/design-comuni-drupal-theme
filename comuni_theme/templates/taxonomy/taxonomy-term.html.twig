{%
  set classes = [
    'taxonomy-term',
    'vocabulary-' ~ term.bundle|clean_class,
  ]
%}
<div{{ attributes.setAttribute('id', 'taxonomy-term-' ~ term.id).addClass(classes) }}>
  <div class="container page-name">
    <div class="row justify-content-center row-shadow">
      <div class="col-12 col-lg-10">
        <div class="cmp-hero">
          <div class="it-hero-wrapper bg-white align-items-start">
            <div class="it-hero-text-wrapper pt-0 ps-0 mb-5">
              <h1 class="text-black hero-title" data-element="page-name">{{ name[0]['#context'].value }}</h1>
              <p class="hero-text">
                {% if content.field_descrizione_breve[0] %}
                  {{ content.field_descrizione_breve[0]["#context"].value }}
                {% endif %}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{ content|without('field_descrizione_breve')|without('field_link_a_eurovoc') }}
</div>